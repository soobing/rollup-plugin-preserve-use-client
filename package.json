{
  "type": "module",
  "name": "rollup-plugin-preserve-use-client",
  "version": "3.0.0",
  "description": "A Rollup plugin to preserve 'use client' directives for React 18 components.",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "scripts": {
    "check": "tsc",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "watch": "npm run build --watch"
  },
  "keywords": [
    "rollup-plugin",
    "rollup",
    "plugin",
    "react",
    "use client",
    "server components",
    "client components"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soobing/rollup-plugin-preserve-use-client"
  },
  "author": "soobing <qls0147@naver.com>",
  "peerDependencies": {
    "rollup": "^4.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "rollup": "^4.24.4",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ]
}
